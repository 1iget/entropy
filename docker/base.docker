FROM debian:jessie

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install --no-install-recommends -qy virtualenv pypy libffi6 libssl1.0.0 libsqlite3-0 ca-certificates libjpeg62-turbo
RUN virtualenv -p /usr/bin/pypy /appenv
RUN . /appenv/bin/activate && pip install --upgrade pip setuptools
